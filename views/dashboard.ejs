<div class="mt-3 d-flex sort-headding">
    <h3 class="me-4"> 
       <small class="text-muted">Sorted By: </small> 
    </h3>
   <h4 class="mt-1">
    <small class="<%= sortType=='all' ? 'text-black':''%>"><a href="/dashboard"> All</a> /</small> 
    <small class="<%= sortType=='rank' ? 'text-black':''%>"><a href="/dashboard/rank">Ranking</a> /</small>
    <small class="<%= sortType=='sport' ? 'text-black':''%>"><a href="/dashboard/sport">Sport Event</a> /</small>
    <small class="<%= sortType=='culture' ? 'text-black':''%>"><a href="/dashboard/culture">Culture Event</a> /</small>
    <small class="<%= sortType=='other' ? 'text-black':''%>"><a href="/dashboard/other">Other</a> /</small>
   </h4>
</div>
<hr>

<% if(locals.events){ %>
    <% events.forEach(function(event) { %>
        <div class="card mt-3">
            <div class="card-body">
              <h4 class="card-title"><%= event.name %></h4>
              <h6 class="card-subtitle mb-2 text-muted">On <%= event.datetime.toLocaleDateString("sv-SE") %>  / At <%= event.datetime.toLocaleTimeString("en-GB") %></h6>
              <p class="card-text"><%= event.description %></p>
              <a href="/events/view-event/<%= event._id %>" class="card-link">View More...</a>
            </div>
        </div>
    <% }); %>
<% } %>
